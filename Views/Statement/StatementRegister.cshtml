@{
    ViewBag.Title = "FormStandard";
}

<style>
    .label-class {
        line-height: 37px;
        vertical-align: middle;
    }
</style>

<div class="content-heading">
    <div>
        전표입력
        <small>회계관리 > 전표입력</small>
    </div>
</div>

<!-- START card-->
<div class="card card-mb3">
    <div class="card-header"></div>
    <div class="card-body">
        <form>

            <div class="form-group">
                <!-- 첫번째줄 -->
                <div class="col-md-1">
                </div>
                <div class="col-md-10">
                    <div class="row">
                        <div class="col-sm-3" align="Right">
                            <label class="label-class" for="invoice_id">
                                회계일자
                            </label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control" name="invoice_id" id="invoice_id" value="2021-05-10" />
                        </div>
                        <div class="col-md-3" align="Right">
                            <label class="label-class" for="invoice_date">
                                전표번호
                            </label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control date-picker" id="invoice_date" name="invoice_date" maxlength="10" value="">
                        </div>
                    </div>
                </div>
                <div class="col-md-1">
                </div>
            </div>

            <div class="form-group">
                <!-- 두번째줄 -->
                <div class="col-md-1">
                </div>
                <div class="col-md-10">
                    <div class="row">
                        <div class="container-fluid">
                            <!-- DATATABLE DEMO 1-->
